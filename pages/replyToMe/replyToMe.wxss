page {
  background: #f5f5f5;
  padding: 0;
  margin: 0;
}
.reply_wrap {
  justify-content: center;
  align-items: center;
  display: flex;
}
.reply_wrap .reply_item {
  margin-top: 20rpx;
  padding: 10rpx;
  width: 90%;
  border-radius: 15rpx;
  background-color: #fff;
  display: flex;
}
.reply_wrap .reply_item .left {
  flex: 1;
}
.reply_wrap .reply_item .left image {
  width: 100%;
  height: 100%;
}
.reply_wrap .reply_item .main {
  flex: 5;
}
.reply_wrap .reply_item .main .top {
  height: 60rpx ;
  display: flex;
}
.reply_wrap .reply_item .main .top .top_name {
  flex: 1;
}
.reply_wrap .reply_item .main .top .top_time {
  flex: 1;
  color: #6c6c6c;
  font-size: 28rpx;
}
.reply_wrap .reply_item .main .bottom {
  font-size: 32rpx;
  color: #767676;
}
