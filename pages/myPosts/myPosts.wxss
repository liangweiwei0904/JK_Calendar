page {
  background: #f5f5f5;
}
.main {
  background: #fefefe;
  border-radius: 15rpx;
  margin: 0rpx 20rpx 30rpx 20rpx;
}
.main .main_top {
  padding: 10rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
}
.main .main_top .top_avatarUrl {
  flex: 1;
}
.main .main_top .top_avatarUrl image {
  margin: 10rpx;
  border-radius: 50%;
  width: 90rpx;
  height: 90rpx;
}
.main .main_top .top_wrap {
  flex: 6;
}
.main .main_top .top_wrap .top_name {
  font-size: 37rpx;
  font-weight: 500;
  color: #373737;
}
.main .main_top .top_wrap .top_time {
  font-size: 28rpx;
  color: #b7b7b7;
}
.main .main_top .iconfont {
  flex: 1;
  font-size: 36rpx;
  margin-top: 20rpx;
  color: #373737;
}
.main .main_middle .middle_content {
  margin: 10rpx 20rpx 15rpx 20rpx;
  font-size: 36rpx;
  color: #373737;
}
.main .main_middle .img_wrap {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}
.main .main_middle .img_wrap .middle_img image {
  margin: 10rpx;
  width: 200rpx;
  height: 200rpx;
}
.main .main_bottom {
  color: #a3a3a3;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.main .main_bottom .iconfont {
  flex: 1;
  width: 33%;
  padding: 0rpx 80rpx;
}
