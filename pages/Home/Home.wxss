page {
  background: #90d3e4;
}
.calendar_wrap {
  font-size: 32rpx;
  margin: 0;
  padding: 0;
}
.calendar_wrap .calendar_select {
  height: 60rpx;
  align-items: center;
  display: flex;
  text-align: center;
  background: linear-gradient(#239ab9, #52bad5);
  color: #fff;
}
.calendar_wrap .calendar_select .arrow {
  width: 220rpx;
  font-weight: bold;
}
.calendar_wrap .calendar_select .calendar_y_m {
  flex: 1;
  font-size: 30rpx;
}
.calendar_wrap .calendar_select .back_to_today {
  font-size: 30rpx;
}
.calendar_wrap .calendar_head {
  color: #373737;
  display: flex;
  width: 100%;
  overflow: hidden;
  align-items: center;
  text-align: center;
  height: 50rpx;
  background: linear-gradient(#52bad5, #6dc5dc);
  font-size: 28rpx;
}
.calendar_wrap .calendar_head .calendar_head_item {
  display: block;
  flex: 1;
}
.calendar_wrap .calendar_body {
  background: linear-gradient(#6dc5dc, #90d3e4);
}
.calendar_wrap .calendar_body .calendar_rows {
  height: 100rpx;
  display: flex;
  overflow: hidden;
  padding: 0 4rpx 8rpx;
  align-items: center;
}
.calendar_wrap .calendar_body .calendar_rows .calendar_cols {
  flex: 1;
  height: 100%;
  padding: 0 4rpx;
  display: flex;
}
.calendar_wrap .calendar_body .calendar_rows .calendar_cols .calendar_item {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #bceaf5;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  color: #373737;
}
.calendar_wrap .calendar_body .calendar_rows .calendar_cols .today {
  color: #fbb03b;
}
.calendar_bottom {
  width: 100%;
  background: #90d3e4;
  display: flex;
  align-items: center;
  justify-content: center;
}
.calendar_bottom .calendar_tips {
  width: 85%;
  margin: 40rpx;
  padding: 10rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 10rpx;
  color: #5d5c5d;
  font-size: 40rpx;
}
.calendar_bottom .calendar_tips .goods_item {
  display: flex;
}
.calendar_bottom .calendar_tips .goods_item .store_name {
  flex: 4;
  padding: 10rpx;
}
.calendar_bottom .calendar_tips .goods_item .goods_name {
  font-size: 35rpx;
  flex: 6;
}
.calendar_bottom .calendar_tips .goods_item .goods_name .detail_time {
  font-size: 30rpx;
  color: #b7b7b7;
}
