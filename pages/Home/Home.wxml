<view class="calendar_wrap">
    <!-- 选择器 -->
    <view class="calendar_select">
        <view class="arrow" data-type="0" bindtap="switchMonth">{{"<"}}</view>
        <view class="calendar_date">{{date}}</view>
        <view class="arrow" data-type="1" bindtap="switchMonth">{{">"}}</view>
    </view>
    <!-- 周日、一、二、三、四、五、六 -->
    <view class="calendar_head">
        <view wx:for="{{week}}">
        {{item}}
        </view>
    </view>
    <!-- 日历主体 -->
    <view class="calendar_body">
        <view wx:for="123456" class="calendar_rows" wx:for-index="row">
            <view class="calendar_cols" wx:for="1234567" wx:for-index="col">
                <view class="calendar_item" bindtap="clickItem" data-day="{{row * 7 - monthStart + col >-1 && row * 7 - monthStart + col < day ? row * 7 + col - monthStart + 1 : ''}}">
                {{
                    row * 7 - monthStart + col >-1 && row * 7 - monthStart + col < day ? row * 7 + col - monthStart + 1 : ''
                }}
                </view>
            </view>
        </view>
    </view>
    <!-- tips：提示是否有要上架的裙子，默认没有 -->
</view>