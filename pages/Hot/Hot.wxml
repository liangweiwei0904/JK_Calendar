<!-- 广告位 -->
<image class="ad" src="../../image/ad.jpg" />
<view class="{{scrollTop>60 ? 'topnavFixed' : 'topnavAbsolute'}}">
    <view class="btn" wx:if="{{flag_post==1}}" bindtap="sortByHot">最新发布</view>
    <view class="btn" wx:else bindtap="sortByTime">热度</view>
</view>
<view class="zhanwei"></view>
<!-- 发布新的帖子所用到的按钮 -->
<view class="new" bindtap="PostorFresh" data-flag="{{isScrollDown}}">
    <image mode="widthFix" src="{{isScrollDown?'../../icons/new.png':'../../icons/fresh.png'}}" />
</view>
<view class="main" wx:for="{{Message}}" bindtap="to_message_detail" id="{{item._id}}">
    <view class="main_top">
        <view class="top_avatarUrl">
            <image mode="widthFix" src="{{item.avatarUrl}}" />
        </view>
        <view class="top_wrap">
            <view class="top_name">{{item.name}}</view>
            <view class="top_time">{{item.post_detail_time}}</view>
        </view>
    </view>
    <view class="main_middle">
        <view class="middle_content">{{item.mess_content}}</view>
        <!-- 显示帖子里面的图片 -->
        <view class="middle_img">
            <image src="{{item.mess_img}}"></image>
        </view>
    </view>
    <view class="main_bottom">
        <view class="iconfont iconB">{{item.hotNum}}</view>
        <view class="iconfont iconpinglun-">{{item.comments.length}}</view>
        <view class="iconfont iconfenxiang"></view>
    </view>
</view>