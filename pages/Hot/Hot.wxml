<!-- 搜索框 -->
<SearchBar bindtap="search"></SearchBar>
<view style="color:black;font-weight:800">最新发布</view>
<view style="color:black;font-weight:800">
    <navigator  url="/pages/PostByUser/PostByUser">用户发帖</navigator>
</view>
<view style="color:black;font-weight:800">
    <navigator  url="/pages/PostBySeller/PostBySeller">商家发帖</navigator>
</view>
<view >分割线</view>
<view style="color:black;font-weight:800">
    <navigator  url="/pages/Notice/Notice">商家的公告</navigator>
</view>
<view class="main" wx:for="{{Message}}" wx:key="{{index}}">
    <view class="main_item" bindtap="to_message_detail" id="{{item.mess_id}}">
        <view class="user_message">
            <view class="user_image">
                <!-- <image src="{{item.userIdAnonymity==0?item.mangoUser.userAvatar:'../../images/other/hidden.jpg'}}" mode="widthFix" /> -->
                <image src="../../icons/Hot-1.png" />
            </view>
            <view class="user_detail">
                <view class="user_name">
                    <text>
                        <!-- {{item.userIdAnonymity==0?item.mangoUser.userNickname:"匿名用户"}} -->
                        用户：{{item.name}}
                    </text>
                </view>
                <!-- 讨论的分类 -->
                <!-- <view class="user_flag">
                            <view class="flag_category">
                                {{allCategoryMessage[item.categoryId-1].categoryName}}
                            </view>
                            <view class="flag_sex">
                                {{item.mangoUser.userGender==1?"小哥哥":"小姐姐"}}
                            </view>
                            <view class="flag_major">{{item.userMajor}}</view>
                            <view class="flag_age">{{item.userLevel}}级</view>
                        </view> -->
            </view>
        </view>
    </view>
    <view class="main_middle">
        <view class="main_middle_content">
            <text>发表：{{item.mess_content}}</text>
        </view>
        <!-- 显示帖子里面的图片 -->
        <view class="main_middle_content">
            <image src="{{item.mess_img}}" ></image>
        </view>
        <!-- <view class="main_middle_image {{item.messageImages.length==1?'change_one':item.messageImages.length==2?'change_second':''}}">
                    <block wx:for="{{item.messageImages}}" wx:key="{{index}}">
                        <image src="{{imageUrl}}{{item.imageUrl}}" mode="aspectFill" />
                    </block>
                </view> -->
    </view>
    <!-- 显示已读数 -->
    <view class="main_bottom">
        <view class="main_bottom_operation">
            <view class="main_bottom_operation_left">
                <view>
                    <text class="iconfont icon-zhuanfa" style="margin-left:20rpx;color:#999;font-size:25rpx;">
                        {{item.messageShare}}
                    </text>
                    <text class="iconfont icon-iconfontpinglun" style="margin-left:50rpx;color:#999;font-size:25rpx;">
                        {{item.messageComment}}
                    </text>
                </view>
            </view>
            <view class="main_bottom_operation_right">
                <text class="iconfont icon-dianzan" style="margin-right:20rpx;color:#999;font-size:25rpx;">
                    {{item.messageWatch}}
                </text>
            </view>
        </view>
    </view>
</view>