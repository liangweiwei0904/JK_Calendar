<view class="user_info_wrap">
    <view class="user_img_wrap" wx:if="{{userinfo.avatarUrl}}">
        <image class="user_bg" src="{{userinfo.avatarUrl}}" />
        <view class="user_info">
            <image class="user_icon" src="{{userinfo.avatarUrl}}" />
            <view class="user_name">{{userinfo.nickName}}</view>
        </view>
    </view>
    <view class="user_btn" wx:else>
        <button type="primary" plain="{{true}}" bindgetuserinfo="handleGetUserInfo" open-type="getUserInfo">
            登录
        </button>
    </view>
</view>
<view class="user_content">
    <view class="user_main">
        <!-- 历史足迹 -->
        <Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
            <view class="order_main">
                <view class="order_item" wx:for="{{orders}}" wx:key="order_id">
                    <view class="order_no_row">
                        <view class="order_no_text">订单编号</view>
                        <view class="order_no_value">{{item.order_number}}</view>
                    </view>
                    <view class="order_price_row">
                        <view class="order_price_text">订单价格</view>
                        <view class="prder_price_value">￥{{item.order_price}}</view>
                    </view>
                    <view class="order_time_row">
                        <view class="order_time_text">订单日期</view>
                        <view class="order_time_value">{{item.create_time_cn}}</view>
                    </view>
                </view>
            </view>
        </Tabs>
        <!-- 我的订单 -->
        <!-- 应用信息相关 -->
        <view class="app_info_wrap">
            <view class="app_info_item app_info_contact">
                <button open-type="contact">联系管理员</button>
            </view>
            <navigator url="/pages/feedback/feedback" class="app_info_item">意见反馈</navigator>
            <view class="app_info_item">关于我们</view>
        </view>
        <!-- 推荐 -->
        <view class="recommend_wrap">把应用推荐给其他人</view>
    </view>
</view>