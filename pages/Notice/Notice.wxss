page {
  background: #f5f5f5;
  padding: 0;
  margin: 0;
  padding-bottom: 20rpx;
}
.notice_wrap .notice_item {
  background: #fefefe;
  border-radius: 15rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
}
.notice_wrap .notice_item .creater_info {
  padding: 10rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
}
.notice_wrap .notice_item .creater_info .avatar {
  flex: 1;
}
.notice_wrap .notice_item .creater_info .avatar image {
  margin: 10rpx;
  border-radius: 50%;
  width: 90rpx;
  height: 90rpx;
}
.notice_wrap .notice_item .creater_info .creater {
  flex: 6;
}
.notice_wrap .notice_item .creater_info .creater .creater_name {
  font-size: 37rpx;
  font-weight: 500;
  color: #373737;
}
.notice_wrap .notice_item .creater_info .creater .create_time {
  font-size: 28rpx;
  color: #b7b7b7;
}
.notice_wrap .notice_item .notice_content {
  display: flex;
  width: 100%;
  height: 250rpx;
}
.notice_wrap .notice_item .notice_content .first_photo {
  flex: 1;
  width: 100%;
  height: 100%;
}
.notice_wrap .notice_item .notice_content .first_photo image {
  margin: 10rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 80%;
  box-shadow: 1rpx 1rpx 2rpx #dceef3;
  /*for Android*/
  -webkit-box-shadow: 1px 1px 2px #dceef3;
  /*for IOS*/
}
.notice_wrap .notice_item .notice_content .base_info {
  flex: 2;
  width: 66%;
  height: 250rpx;
}
.notice_wrap .notice_item .notice_content .base_info .goods_name {
  color: #2e2e2e;
  font-size: 32rpx;
  margin-bottom: 15rpx;
}
.notice_wrap .notice_item .notice_content .base_info .sell_time {
  color: #2399b8;
  font-style: 36rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
}
.notice_wrap .notice_item .notice_content .base_info .sell_number {
  margin-bottom: 15rpx;
}
.notice_wrap .notice_item .notice_content .base_info .store_name {
  font-size: 28rpx;
  color: #b7b7b7;
  margin-bottom: 15rpx;
}
