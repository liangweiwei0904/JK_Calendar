<!-- 详细帖子主体 -->
<view class="main" wx:for="{{Message}}" bindtap="to_message_detail" id="{{item._id}}">
    <!-- 帖子头部 -->
    <view class="main_top">
        <view class="top_left">
            <image mode="widthFix" src="{{Message[0].avatarUrl}}" />
        </view>
        <view class="top_middle">
            <view class="top_name">{{Message[0].name}}</view>
            <view class="top_time">{{Message[0].post_detail_time}}</view>
        </view>
        <view class="top_right">
            <view class="top_visitNum">{{Message[0].visit}}阅读</view>
        </view>
    </view>
    <!-- 帖子中部 -->
    <view class="main_middle">
        <view class="middle_content">{{Message[0].mess_content}}</view>
        <!-- 显示帖子里面的图片 -->
        <view class="middle_img">
            <image src="{{Message[0].mess_img}}"></image>
        </view>
    </view>
    <!-- 帖子底部 -->
    <view class="main_bottom">
        <view class="bottom_left">
            <view class="left_comments">评论{{item.comments.length}}</view>
        </view>
        <view class="bottom_middle">
            <view class="left_share">转发{{item.comments.length}}</view>
        </view>
        <view class="bottom_right">
            <view class="left_hotNum">热度{{item.hotNum}}</view>
        </view>
    </view>
</view>
<!-- 评论区 -->
<view class="comments" wx:for="{{Message[0].comments}}" wx:key="{{index}}">
    <!-- 评论头部 -->
    <view class="main_top">
        <view class="top_left">
            <image mode="widthFix" src="{{item.avatarUrl}}" />
        </view>
        <view class="top_middle">
            <view class="top_name">{{item.username}}</view>
            <view class="top_time">{{item.commentTime}}</view>
        </view>
    </view>
    <!-- 评论内容 -->
    <view class="mess_content">
        <view class="kong"></view>
        <view class="content">{{item.content}}</view>
    </view>
</view>
<view class="reply">
    <text class=" iconfont iconxie"></text>
    <textarea placeholder="写回复" bindinput="handleCommentText"></textarea>
    <view class="btn" bindtap="handleBtn">发表</view>
</view>